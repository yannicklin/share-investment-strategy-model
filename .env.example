# Environment variables for ASX Bot Trading System
# Copy this file to .env and fill in your values

# ============================================================================
# Database (Supabase PostgreSQL)
# ============================================================================
DATABASE_URL=postgresql://user:password@db.supabase.co:5432/postgres

# ============================================================================
# Security Tokens
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
CRON_TOKEN=your-github-actions-cron-token-here

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
BACKUP_ENCRYPTION_KEY=your-aes-256-encryption-key-here

# ============================================================================
# Notifications
# ============================================================================
# SendGrid (FREE 100 emails/day)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
NOTIFICATION_EMAIL=your-email@example.com

# Telnyx SMS ($0.02/message)
TELNYX_API_KEY=your-telnyx-api-key-here
NOTIFICATION_PHONE=+61412345678

# Telegram Bot API (FREE alternative)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-chat-id-here

# ============================================================================
# Cloud Storage (Tigris - Fly.io integrated)
# ============================================================================
TIGRIS_ACCESS_KEY_ID=your-tigris-access-key
TIGRIS_SECRET_ACCESS_KEY=your-tigris-secret-key
TIGRIS_BUCKET_NAME=asx-bot-storage
TIGRIS_ENDPOINT_URL=https://fly.storage.tigris.dev

# ============================================================================
# Application Config
# ============================================================================
FLASK_ENV=development
FLASK_DEBUG=1
